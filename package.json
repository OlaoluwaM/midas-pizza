{
  "name": "pizza-delivery-app",
  "version": "0.1.0",
  "private": false,
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@hookform/error-message": "0.0.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^26.0.10",
    "framer-motion": "^2.6.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.7.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-toastify": "^6.0.8",
    "recoil": "0.0.10",
    "source-map-explorer": "^2.5.0",
    "styled-components": "^5.1.1",
    "styled-icons": "^10.18.0"
  },
  "scripts": {
    "start-client": "npm start",
    "build": "react-scripts build && cd server && node entry.js",
    "start": "react-scripts start",
    "serve:dev": "nodemon -r dotenv/config ./server/entry.js dotenv_config_path=./server/.env.dev",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen --testMatch=**/__tests__/**/*.test.[j]s?(x) --silent",
    "eject": "react-scripts eject",
    "serve:prod": "nodemon -r dotenv/config ./server/entry.js dotenv_config_path=./server/.env.prod",
    "pbuild": "npm run serve:prod"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@welldone-software/why-did-you-render": "^4.3.1",
    "dotenv": "^8.2.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2"
  }
}
